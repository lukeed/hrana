{
	"tasks": {
		"spec": "deno run -A scripts/spec.ts",
		"build": "deno run -A scripts/build.ts"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-var",
				"prefer-const",
				"no-cond-assign",
				"no-explicit-any",
				"no-inner-declarations",
				"no-namespace"
			]
		}
	},
	"fmt": {
		"lineWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"nodeModulesDir": "auto",
	"exclude": [
		"build",
		"coverage",
		"readme.md"
	]
}
